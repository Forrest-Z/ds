#!/usr/bin/env python
# -*- coding: utf-8 -*-
PACKAGE = "ivsimulationenv"

from dynamic_reconfigure.parameter_generator_catkin import *

gen = ParameterGenerator()


gen.add("Target_ID",    int_t,    0, "An Integer parameter", 0,  0, 254)
size_enum = gen.enum([ gen.const("following_forward",     int_t, 0, "car following forward"),
                                            gen.const("stay_still",      int_t, 1, "keep still"),
                                            gen.const("Cut_in_Slow_down ", int_t, 2, "An extra large constant"),
                                            gen.const("Cut_in_Speed_up ", int_t, 3, "An extra large constant"),
                                            gen.const("Overtaking_by_side_lane ", int_t, 4, "An extra large constant"),
                                            gen.const("following_backward ", int_t, 5, "An extra large constant")],
                                         "An enum to set size")

gen.add("Function", int_t, 0, "A size parameter which is edited via an enum", 1, 0, 5, edit_method=size_enum)

gen.add("x", double_t, 0, "A double parameter", 10.5, -100,   100)
gen.add("R_x", double_t, 0, "A double parameter", 0.5, 0,   10)
gen.add("y", double_t, 0, "A double parameter", 0.5, -100,   100)
gen.add("R_y", double_t, 0, "A double parameter", 0.5, 0,   10)
gen.add("v", double_t, 0, "A double parameter", 0.5, -30,   30)
gen.add("R_v", double_t, 0, "A double parameter", 0.5, 0,   10)


gen.add("Acceleration_selection",   bool_t,   0, "A Boolean parameter",  True)
gen.add("a", double_t, 0, "A double parameter", 0, -10,   10)
size_enum = gen.enum([ gen.const("sin",      int_t, 0, "A small constant"),
                                            gen.const("cos",     int_t, 1, "car following forward"),
                                            gen.const("other", int_t, 2, "An extra large constant")],
                                         "An enum to set size")

gen.add("auto_acceleration", int_t, 0, "A size parameter which is edited via an enum", 1, 0, 2, edit_method=size_enum)
gen.add("cycle_time", double_t, 0, "A double parameter", 5.5, 0,   100)
gen.add("Range", double_t, 0, "A double parameter", 10.5, 0,   100)
gen.add("action", int_t, 10, "A double parameter", 0, 0,   3)





exit(gen.generate(PACKAGE, "ivsimulationenv", "simulation"))
